<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.lars</groupId>
		<artifactId>remotelight</artifactId>
		<version>0.2.3</version>
	</parent>

	<artifactId>remotelight-client</artifactId>
	<name>RemoteLight Client</name>
	<description>RemoteLight Swing Desktop Client</description>
	<packaging>jar</packaging>

	<properties>
		<flatlaf.version>0.38</flatlaf.version>
	</properties>

	<dependencies>
		<!-- RemoteLightCore -->
		<dependency>
			<groupId>de.lars</groupId>
			<artifactId>remotelight-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>de.lars</groupId>
			<artifactId>remotelight-plugincore</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!-- ColorPicker -->
		<dependency>
			<groupId>de.lars.colorpicker</groupId>
			<artifactId>colorpicker</artifactId>
			<version>0.3</version>
		</dependency>
		<!-- FlatLaf -->
		<dependency>
			<groupId>com.formdev</groupId>
			<artifactId>flatlaf</artifactId>
			<version>${flatlaf.version}</version>
		</dependency>
		<dependency>
			<groupId>com.formdev</groupId>
			<artifactId>flatlaf-intellij-themes</artifactId>
			<version>${flatlaf.version}</version>
		</dependency>
		<!-- jIconFont -->
		<dependency>
			<groupId>com.github.jiconfont</groupId>
			<artifactId>jiconfont-swing</artifactId>
			<version>1.0.1</version>
		</dependency>
	</dependencies>

	<!-- External non standard repositories -->
	<repositories>
		<repository>
			<id>github</id>
			<url>https://maven.pkg.github.com/Drumber/ColorPicker</url>
		</repository>
	</repositories>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<!-- include license and changelog from root directory -->
				<directory>${user.dir}</directory>
				<includes>
					<include>LICENSE</include>
					<include>CHANGELOG.md</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<!-- TEST -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.0.0-M4</version>
			</plugin>
			<!-- COMPILE -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<!-- ASSEMBLY -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>RemoteLight-${project.version}</finalName>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>de.lars.remotelightclient.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>